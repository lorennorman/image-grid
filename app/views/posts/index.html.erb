<div id="posts">
  <% @posts.each do |post| %>
    <div class="row">
      <%# Renders the _post.html.erb partial for each post %>
      <%= render post %>
    </div>
  <% end %>
</div>

<div id="footer">
  <ul>
    <li class="title">Photos (<%= @posts.count %>):</li>
    <li><%= link_to 'New Post', new_post_path %></li>
    <li><a id='animate' href="#">Animate</a></li>
  </ul>
</div>
