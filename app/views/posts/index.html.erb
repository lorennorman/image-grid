<div id="posts">
  <%# nastiness find_in_batches and in_groups_of aren't working %>
  <% ([@posts.count/4, 1].max).times do |page| %>
    <div class="row">
      <%# Renders the _post.html.erb partial for each of the next 4 posts %>
      <%= render @posts.skip(page).limit(4) %>
    </div>
  <% end %>
</div>

<div id="footer">
  <ul>
    <li class="title">Photos (<%= @posts.count %>):</li>
    <li><%= link_to 'New Post', new_post_path %></li>
    <li><a id='animate' href="#">Animate</a></li>
  </ul>
</div>
